<Window x:Name="Login" x:Class="UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Personal Organizer" Height="400" Width="400" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FF00F070">
    <Grid HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="400" Background="White" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Button x:Name="CloseButton" Content="" HorizontalAlignment="Left" Margin="370,10,0,0" VerticalAlignment="Top" Width="20" Click="CloseButton_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Icons/closeIcon.ico"/>
            </Button.Background>
        </Button>
    </Grid>

</Window>
